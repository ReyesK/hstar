<%= form_for @word do |f|%>
  <div class="mtm">
    <%= f.label :text %>:
    <%= f.text_field :text %>
  </div>

  <div class="mtm">
    <%= f.label :type %>:
    <%= f.select :type, options_for_select(Word::WORD_TYPES) %>
  </div>

  <div class="mtm">
    <%= f.label :article %>:
    <%= f.select :article, options_for_select(Word::ARTICLE_OPTS) %>
  </div>

  <div class="mtm">
    <%= f.label :pronoun %>:
    <%= f.select :pronoun, options_for_select(Word::PRONOUN_OPTS) %>
  </div>

  <div class="mtm">
    <%= f.submit %>
  </div>

<% end %>
